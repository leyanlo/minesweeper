{
  "name": "minesweeper",
  "description": "Minesweeper",
  "version": "1.0.0",
  "author": "Leyan Lo <leyanlo@gmail.com>",
  "dependencies": {
    "@reach/router": "^1.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "core-js": "^2.6.2",
    "gatsby": "^2.0.91",
    "gatsby-cli": "^2.4.8",
    "gatsby-image": "^2.0.26",
    "gatsby-plugin-google-analytics": "^2.0.9",
    "gatsby-plugin-manifest": "^2.0.13",
    "gatsby-plugin-offline": "^2.0.21",
    "gatsby-plugin-react-helmet": "^3.0.5",
    "gatsby-plugin-sharp": "^2.0.17",
    "gatsby-plugin-styled-components": "^3.0.4",
    "gatsby-source-filesystem": "^2.0.27",
    "gatsby-transformer-sharp": "^2.1.10",
    "keymirror": "^0.1.1",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "styled-components": "^4.1.3"
  },
  "keywords": [
    "minesweeper"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "deploy": "gatsby build --prefix-paths && gh-pages -d public",
    "develop": "gatsby develop",
    "format": "npm-run-all -p format:js format:css",
    "format:js": "prettier --write 'src/**/*.{js,jsx,json,yaml}'",
    "format:css": "prettier --write 'src/**/*.css'",
    "lint": "npm-run-all -p lint:js lint:css lint:css-js",
    "lint:js": "eslint --fix --ignore-path .gitignore 'src/**/*.{js,jsx}'",
    "lint:css": "stylelint --fix 'src/**/*.css'",
    "lint:css-js": "stylelint --config stylelint-js.config.js 'src/**/*.{js,jsx}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-constant-elements": "^7.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "gatsby-plugin-react-svg": "^2.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-rational-order": "0.0.2",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leyanlo/minesweeper"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "stylelint --config stylelint-js.config.js",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  }
}
